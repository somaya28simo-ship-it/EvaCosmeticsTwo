@model WebApplication1.Models.Product
@{
    ViewData["Title"] = Model.Name;
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6 text-center">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow" style="max-height: 400px;">
        </div>
        <div class="col-md-6">
            <h2 class="mb-3">@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>
            <h4 class="text-danger">$@Model.Price</h4>
            <form asp-controller="Cart" asp-action="Add" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <input type="hidden" name="productName" value="@Model.Name" />
                <input type="hidden" name="price" value="@Model.Price" />
                <input type="hidden" name="imageUrl" value="@Model.ImageUrl" />

                <button type="submit" class="btn btn-pink mt-3">Add to Bag 🛍️</button>
            </form>
        </div>
    </div>

    <hr class="my-5" />

    <div>
        <h4 class="mb-4">Customer Reviews</h4>
        <div class="card p-4 bg-light border-0 shadow-sm mb-3">
            <div class="d-flex align-items-start mb-3">
                <img src="https://via.placeholder.com/60" class="rounded-circle me-3" alt="User" />
                <div>
                    <h6 class="mb-1">Sara Ahmed</h6>
                    <p class="mb-0">The product is amazing, smells so good and makes my hair soft!</p>
                </div>
            </div>
        </div>
    </div>
</div>
