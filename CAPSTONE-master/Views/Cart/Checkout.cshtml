@model WebApplication1.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container py-5">
    <h2 class="mb-4">Checkout</h2>

    <form asp-action="Checkout" method="post">
        <div class="mb-3">
            <label asp-for="CustomerName" class="form-label">Full Name</label>
            <input asp-for="CustomerName" class="form-control" />
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">Shipping Address</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-pink">Place Order</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

