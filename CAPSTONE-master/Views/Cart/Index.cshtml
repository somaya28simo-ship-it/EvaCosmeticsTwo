@model List<WebApplication1.Models.CardItem>
@{
    ViewData["Title"] = "Your Shopping Bag";
    Layout = "_Layout";
}

<div class="container py-5">
    <h2 class="text-center mb-4">🛍️ Your Shopping Bag</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            Your bag is empty 😢. Go add some products!
        </div>
    }
    else
    {
        <table class="table table-bordered shadow">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>
                            <img src="@item.ImageUrl" alt="@item.ProductName" style="width: 60px; height: 60px;" class="rounded shadow-sm" />
                        </td>
                        <td>$@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>$@(item.Price * item.Quantity)</td>
                        <td>
                            <a asp-action="Remove" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end">
            <h4 class="text-success">
                Total: $@Model.Sum(i => i.Price * i.Quantity)
            </h4>
        </div>
        <div class="text-end mt-3">
            <a asp-action="Checkout" class="btn btn-pink px-4 py-2">Proceed to Checkout</a>
        </div>

    }
</div>
