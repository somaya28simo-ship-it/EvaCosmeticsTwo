<style>
    body {
        background-color: #f8d7e5;
    }

    .card {
        margin-bottom: 30px;
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 15px;
        background-color: #fff;
    }

        .card img {
            border-radius: 8px;
            max-height: 200px;
            object-fit: contain;
            margin-bottom: 15px;
            padding: 10px;
            background-color: #fdfdfd;
        }

    .card-title {
        font-weight: bold;
        font-size: 1.1rem;
        margin-bottom: 10px;
    }

    .card-text {
        color: #6c757d;
        font-size: 0.95rem;
        margin-bottom: 15px;
    }

    .btn-pink {
        background-color: #ff69b4;
        color: white;
        padding: 10px 40px; /* كبرنا الزر */
        border-radius: 25px;
        font-size: 1rem;
        font-weight: 500;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-pink:hover {
            background-color: #ff1493;
            transform: scale(1.05);
        }

    .row {
        margin-bottom: 30px;
    }
</style>


