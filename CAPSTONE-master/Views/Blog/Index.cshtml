@{
    Layout = "_Layout";
    ViewData["Title"] = "Blog";
}


<style>
    .bg-soft-pink {
        background-color: #fddde6;
    }

    .card-title {
        font-weight: 600;
        font-size: 1.25rem;
    }

    .card-text {
        font-size: 0.95rem;
        color: #555;
    }

    .tags .badge {
        margin-right: 5px;
        font-size: 0.75rem;
        background-color: #f3f3f3;
    }

    .btn-outline-dark {
        border-radius: 20px;
        font-size: 0.8rem;
        padding: 4px 15px;
    }

    .pagination .page-link {
        border-radius: 50%;
        width: 35px;
        height: 35px;
        text-align: center;
        padding: 6px 0;
        color: #000;
    }

    .pagination .page-item.active .page-link {
        background-color: #fff;
        border-color: #000;
    }
</style>

<section class="py-5 bg-soft-pink text-center">
    <div class="container">
        <h3 class="mb-5 fw-bold">ON THE BLOG</h3>

        <div class="row g-4 text-start">

            <!-- Card 1 -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <img src="~/Images/coconut-1-piece-approx-300-g-600-g-product-images-o590002624-p590002624-0-202410141245.webp" class="card-img-top" alt="Coconut">
                    <div class="card-body">
                        <h5 class="card-title">Cracking the Coconut Code</h5>
                        <p class="card-text">Coconuts are not just for tropical vibes—they hold amazing skincare secrets! Learn how coconut oil can hydrate and repair your skin naturally.</p>
                        <div class="tags mb-2">
                            <span class="badge">#Skincare</span>
                            <span class="badge">#Coconut</span>
                            <span class="badge">#Hydration</span>
                        </div>
                        <a href="#" class="btn btn-outline-dark btn-sm">Read More</a>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <img src="https://via.placeholder.com/500x300?text=Bloom+2023" class="card-img-top" alt="Bloom">
                    <div class="card-body">
                        <h5 class="card-title">Eva Cosmetics Best of 2025</h5>
                        <p class="card-text">Glow with confidence! Discover the top beauty products that made headlines in 2025 for their performance and user love.</p>
                        <div class="tags mb-2">
                            <span class="badge">#Eva</span>
                            <span class="badge">#Trends</span>
                            <span class="badge">#2025</span>
                        </div>
                        <a href="#" class="btn btn-outline-dark btn-sm">Read More</a>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <img src="https://via.placeholder.com/500x300?text=Habits" class="card-img-top" alt="Habits">
                    <div class="card-body">
                        <h5 class="card-title">7 Skincare Habits to Break Now</h5>
                        <p class="card-text">Are your skincare routines helping or hurting? Break these 7 bad habits and learn how to truly care for your skin like a pro.</p>
                        <div class="tags mb-2">
                            <span class="badge">#Tips</span>
                            <span class="badge">#SkincareHabits</span>
                            <span class="badge">#GlowUp</span>
                        </div>
                        <a href="#" class="btn btn-outline-dark btn-sm">Read More</a>
                    </div>
                </div>
            </div>

            <!-- Card 4 -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <img src="https://via.placeholder.com/500x300?text=Skin+Care" class="card-img-top" alt="Skin Care">
                    <div class="card-body">
                        <h5 class="card-title">Getting Your Skin Care Back on Track</h5>
                        <p class="card-text">Missed a few routines? Don’t worry! We’ve got the perfect step-by-step plan to reset your skin and get your glow back fast.</p>
                        <div class="tags mb-2">
                            <span class="badge">#Recovery</span>
                            <span class="badge">#Routine</span>
                            <span class="badge">#FreshStart</span>
                        </div>
                        <a href="#" class="btn btn-outline-dark btn-sm">Read More</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation example" class="mt-5">
            <ul class="pagination justify-content-center">
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
            </ul>
        </nav>
    </div>
</section>
